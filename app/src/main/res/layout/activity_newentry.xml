<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewEntry.NewEntryClass">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBar"
        style="@style/SpinKitView.Circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        android:elevation="5dp"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        app:SpinKit_Color="#008641" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:baselineAligned="false"
            android:text="SBMM"
            android:textColor="#008641"
            android:textSize="18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="#ffffff"
                    android:cursorVisible="false"
                    android:hint="Choose date"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/calender_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/calender" />

                </LinearLayout>

            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/date_error"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="#E53935"-->
            <!--                android:layout_margin="10dp"-->
            <!--                android:textAlignment="textEnd"-->
            <!--                android:paddingEnd="40dp"-->
            <!--                android:visibility="gone"-->

            <!--                />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Serial no"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/s_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_bg"
                    android:elevation="2dp"
                    android:hint="S.No"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:enabled="false"
                    android:cursorVisible="false"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/error1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Party Name"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <AutoCompleteTextView
                    android:id="@+id/party_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_bg"
                    android:elevation="2dp"
                    android:hint="Party Name"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/error2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Place"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <AutoCompleteTextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_bg"
                    android:elevation="2dp"
                    android:hint="Place"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/error3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vehicle number"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/v_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_bg"
                    android:elevation="2dp"
                    android:hint="Vehicle Number"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Material Details"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />


                <Button
                    android:id="@+id/add1"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/bg_bend_one"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"


                    >

                </Button>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            </LinearLayout>


            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone">

            </Button>

            <TextView
                android:id="@+id/error5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/unit_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/price_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Total value"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:cursorVisible="false"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </LinearLayout>


            <TextView
                android:id="@+id/error6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone" />

            <Button
                android:id="@+id/sumbit_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:letterSpacing="0.01"
                android:text="Submit"
                android:background="@drawable/green_bg"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>